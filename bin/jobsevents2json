#!/bin/bash

if [[ -z $1 ]]; then
    echo "Usage: $0 <history_directory> <output_directory>"
fi

OUTDIR="$2"
CMD="jobevents2json"

for fn in `find "${1}/history/done" -type f -regex '.+[^(xml|jar|crc)]$'`
do
echo "Parsing file ${fn}"
"$CMD" -i "${fn}" -o "${OUTDIR}" 1>/dev/null 2>/dev/null &
done

wait
